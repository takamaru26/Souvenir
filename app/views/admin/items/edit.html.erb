<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>投稿アイテム編集</h2>
        <%= form_with model: @item, url: admin_item_path, local: true do |f| %>
          <%#= render 'layouts/errors', obj: @item %>
          <div class="form-group">
            <%= f.label :アイテム画像 %>
            <%= f.file_field :image, class: "form-control-file item_image", accept: "image/*" %>
          </div>
          <div class="form-group">
            <%= f.label :アイテム名 %>
            <%= f.text_field :name, class: "form-control name" %>
          </div>
          <div class="form-group">
            <%= f.label :価格 %>
            <%= f.text_field :price, class: "form-control price" %>
          </div>
          <div class="form-group">
            <%= f.label :コメント %>
            <%= f.text_field :explanation, class: "form-control explanation" %>
          </div>
          <div class="form-group">
            <%= f.label :タグ %>
            <%= f.text_field :tag,value: @tag_list, class: "form-control tag" %>
          </div>
             ( , で区切ると複数タグ登録できます)
            <%#= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
          <div class="form-group">
            <%= f.submit class: 'btn btn-secondary' %>
          </div>
        <% end %>
      </div>
  </div>
</div>