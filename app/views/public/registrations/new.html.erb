<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"姓  "%><%= f.text_field :last_name, autofocus: true, placeholder: "新規" %>
  </div>
  <div class="field">
    <%= f.label :"名  "%><%= f.text_field :first_name, autofocus: true, placeholder: "登録" %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス    "%><%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード  "%>
    <% if @minimum_password_length %>
    <% end %><br>
    <%= f.password_field :password, autocomplete: "new-password" %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br>
    半角英数　6文字以上<br>
    確認の為　2回入力をしてください。
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>