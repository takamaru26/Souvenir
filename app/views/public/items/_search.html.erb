<div class="d-flex justify-content-end">
  <%= form_with url: public_items_path, method: :get, local: true, class: 'boards__searchForm' do |f| %>
    <div class="input-group">
      <%= f.text_field :keyword, value: @keyword, class: "form-control search-control", placeholder: "キーワードを入力" %>
      <span class="input-group-btn input-group-append">
        <%= button_tag type: "submit", class: "btn btn-secondary search-btn" do %>
          <i class="fas fa-search"></i> 検索</button>
        <% end %>
      </span>
    </div>

    <%= select_tag :item_tag_id, options_from_collection_for_select(ItemTag.all, :id, :tag_type, params[:item_tag_id]), { prompt: "タグで絞り込み検索", onchange: "submit(this.form);" } %>

    <%= select_tag :price_range, options_for_select(["0-5000", "5001-10000", "10001-20000", "20001-30000", "30000以上"], params[:price_range]), prompt: "価格帯で絞り込み検索", onchange: "this.form.submit();", name: 'price_range' %>
  <% end %>
</div>