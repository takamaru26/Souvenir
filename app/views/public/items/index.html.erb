<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h3>User Information</h3>
      <%= render 'public/users/info', user: @user %>

      <h3 class="mt-3">New Present</h3>
      <%= render 'form', item: @item %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h3>Item List</h3>
      <% @item.each do |item| %>
        <div>
          <p>ユーザーネーム：<%= item.user.last_name+item.user.first_name %></p>
          <p>アイテム画像：<%= image_tag item.get_image, size: '100x100', style: 'object-fit: cover;' %></p>
          <p>アイテム名：<%= item.name %>  価格：<%= item.price %></p>
          <p>コメント：<%= item.explanation %></p>
          <p>投稿日：<%= item.created_at.strftime('%Y/%m/%d') %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= paginate @items %>