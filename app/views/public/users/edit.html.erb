<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User Edit Information</h2>
      <%= form_with model: @user, url: public_user_path, local:true do |f| %>
        <%= render 'layouts/errors', obj: @user %>
        <div class="form-group">
          <%= f.label :姓 %>
          <%= f.text_field :last_name, class: "form-control name" %>
          <%= f.label :名 %>
          <%= f.text_field :first_name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :プロフィール画像 %>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :自己紹介 %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-secondary' %>
        </div>
        <% end %>
        <% if @user.released? %>
          <%= button_to '非公開にする', "/public/users/#{@user.id}/nonrelease", method: :patch %>
        <% else %>
          <%= button_to '公開する',"/public/users/#{@user.id}/release", method: :patch%>
        <% end %>
    </div>
  </div>
</div>