<table class='table'>
  <tr>
    <td><%= image_tag user.get_profile_image, size:'100x100' %></td>
  </tr>
  <tbody>
    <tr>
      <th>ユーザーネーム</th>
      <td><%= "#{user.last_name} #{user.first_name}" %></td>
    </tr>
    <tr>
      <th>自己紹介</th>
      <td><%= user.introduction %></td>
    </tr>
    <tr>
      <th>フォロー数 <%= link_to user.followings.count, public_user_followings_path(user) %></th>
      <th>フォロアー数 <%= link_to user.followers.count, public_user_followers_path(user) %></th>
    </tr>
  </tbody>
</table>
  
<tr>
  <td>
    <% if current_user != user %>
      <%= render "public/relationships/btn", user: user %>
    <% else %>
      <%= link_to edit_public_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    <% end %>
  </td>
</tr>