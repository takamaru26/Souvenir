<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h1>My Page</h1>
      <%= render 'info', user: @user %>

      <h3 class="mt-3">プレゼント登録</h3>
      <%= render 'public/items/form', item: @item %>
    </div>
  </div>
</div>

<div class='container'>
  <thead>
    <% @items.each do |item| %>
      <div>
        <p>アイテム画像：<%= image_tag item.get_image, size: '100x100', style: 'object-fit: cover;' %></p>
        <p>アイテム名：<%= item.name %></p>
        <p>価格：<%= item.price %>円</p>
        <p>コメント：<%= item.explanation %></p>
        <p>投稿日：<%= item.created_at.strftime('%Y/%m/%d') %></p>
      </div>
    <% end %>
  </thead>
</div>