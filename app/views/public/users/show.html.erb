<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h3>User Information</h3>
      <%= render 'info', user: @user %>

      <h3 class="mt-3">New Present</h3>
      <%= render 'public/items/form', item: @item %>
    </div>
    <div class="col-md-8 offset-md-1">
    <h3>Recent Present</h3>
      <table class='table'>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td rowspan="3" scope="rowgroup"><%= image_tag item.get_image, size: '100x100', style: 'object-fit: cover;' %></td>
              <th>アイテム名:<td><%= link_to item.name,public_item_path(item.id) %></td></th>
              <th>価格:<td><%= item.price %>円</td></th>
            </tr>
            <tr>
              <th>コメント:</th><td><%= item.explanation %></td>
              <th>投稿日:<td><%= item.created_at.strftime('%Y/%m/%d') %></td></th>
            </tr>
              <!-- タグリスト -->
              <td><% item.item_tags.each do |tag| %>
              <i class="fa-sharp fa-solid fa-tag"></i>
                <%= link_to tag.name,search_tag_path(item_tag_id: tag.id) %>
              <% end %>
              </td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
  <%= paginate @items %>